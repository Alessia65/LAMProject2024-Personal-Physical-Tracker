<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State normal (not checked) -->
    <item android:color="@color/white" android:state_checked="false" />

    <!-- State checked -->
    <item android:color="@color/red_500" android:state_checked="true" />

    <!-- State pressed -->
    <item android:color="@color/red_500" android:state_pressed="true" />

</selector>

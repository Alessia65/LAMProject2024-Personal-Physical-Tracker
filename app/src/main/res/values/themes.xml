<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PersonalPhysicalTracker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CircularProgressBar_Walking">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circle_graph_walking</item>
    </style>
    <style name="CircularProgressBar_Driving">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circle_graph_driving</item>
    </style>
    <style name="CircularProgressBar_Standing">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circle_graph_standing</item>
    </style>
    <style name="ThemeCalendar" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipStrokeColor">@color/grey_500</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="checkedIconTint">@color/black</item>
        <item name="android:textAppearance">@style/chipText</item>
    </style>
    <style name="chipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/blue_500</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.personalphysicaltracker.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_calendar"
        android:name="com.example.personalphysicaltracker.ui.calendar.CalendarFragment"
        android:label="@string/title_calendar"
        tools:layout="@layout/fragment_calendar" />

    <fragment
        android:id="@+id/navigation_charts"
        android:name="com.example.personalphysicaltracker.ui.charts.ChartsFragment"
        android:label="@string/title_charts"
        tools:layout="@layout/fragment_charts" />

    <fragment
        android:id="@+id/activitiesDoneFragment"
        android:name="com.example.personalphysicaltracker.ui.calendar.ActivitiesDoneFragment"
        android:label="@string/title_activities_done"
        tools:layout="@layout/fragment_activities_done" />

    <fragment
        android:id="@+id/walkingChartsFragment"
        android:name="com.example.personalphysicaltracker.ui.charts.WalkingChartsFragment"
        android:label="@string/text_walking"
        tools:layout="@layout/fragment_charts_walking" />

    <fragment
        android:id="@+id/drivingChartsFragment"
        android:name="com.example.personalphysicaltracker.ui.charts.DrivingChartsFragment"
        android:label="@string/text_driving"
        tools:layout="@layout/fragment_charts_driving" />

    <fragment
        android:id="@+id/standingChartsFragment"
        android:name="com.example.personalphysicaltracker.ui.charts.StandingChartsFragment"
        android:label="@string/text_standing"
        tools:layout="@layout/fragment_charts_standing" />
</navigation>